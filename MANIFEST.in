# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt
include PUBLISHING.md

# Include version file
include __version__.py

# Include server package
recursive-include server *.py

# Include internal libraries (only those used at runtime)
recursive-include libs/py-cloud-connector *.py
recursive-include libs/py-cloud-connector *.toml
recursive-include libs/py-cloud-connector *.md
recursive-include libs/py-normalize *.py
recursive-include libs/py-normalize *.toml
recursive-include libs/py-normalize *.md

# Include helper scripts (dev-only, but useful)
recursive-include scripts *.sh

# Exclude development and cache files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * *.egg-info

# Exclude development directories
exclude __dev__
recursive-exclude __dev__ *
exclude tests
recursive-exclude tests *

# Exclude backup files
global-exclude *~
global-exclude *.bak
global-exclude libs_backup_*
